<Window x:Class="FilmTicketBooking.Movie_Management__Panel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmTicketBooking"
        mc:Ignorable="d"
        Title="Movie_Management__Panel" Height="450" Width="800"
        MaxWidth="1000" MaxHeight="650"
        ResizeMode="NoResize" 
        WindowStartupLocation="Manual"
        Left="200" Top="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle HorizontalAlignment="Stretch" 
           VerticalAlignment="Stretch" 
           Grid.ColumnSpan="4"
           Grid.RowSpan="3">

            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#CC5500" Offset="0" />
                    <GradientStop Color="#88353535" Offset="1" />
                    <GradientStop Color="#00008B" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>

        </Rectangle>


        <TextBlock  Grid.Column="0"
                    Grid.ColumnSpan="4"
                    TextWrapping="Wrap" 
                    Text="Movie Management Panel" 
                    FontSize="40" 
                    FontWeight="Bold" 
                    Foreground="black" 
                    TextAlignment="Center" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    Margin="133,0,0,0" Width="497"
                    
                    />

        <!--Add Button-->
        <Button Grid.Row="3"
                Grid.Column="0"
                Content="Add Movie" 
                HorizontalAlignment="Center"         
                VerticalAlignment="center" 
                Width="120" 
                Height="38"
                Background="Orange" 
                FontWeight="Bold"
                Click="Add_Button"
                Cursor="Hand">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Orange" CornerRadius="15" Padding="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>

        <!--Edit Button-->
        <Button Grid.Row="3"
                Grid.Column="1"
                Content="Edit Movie " 
                HorizontalAlignment="Center"          
                VerticalAlignment="center" 
                Width="120" 
                Height="38"
                Background="Orange" 
                FontWeight="Bold"
                Cursor="Hand"
                Click="Edit_Button"
                >

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Orange" CornerRadius="15" Padding="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>

        <!--Delete Button-->
        <Button Grid.Row="3"
                Grid.Column="2"
                Content="Delete Movie" 
                HorizontalAlignment="Center"         
                VerticalAlignment="center" 
                Width="120" 
                Height="38"
                Background="Orange" 
                FontWeight="Bold"
                Cursor="Hand"
                Click="Delete_Button"
               >

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Orange" CornerRadius="15" Padding="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>


        <!--Back Button-->
        <Button Grid.Row="2"
                Grid.Column="3"
                Content="Back" 
                HorizontalAlignment="Center"         
                VerticalAlignment="Center" 
                Width="120" 
                Height="38"
                Background="Orange" 
                FontWeight="Bold"
                Cursor="Hand"
                Click="Back_Button"
                   >

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="Orange" CornerRadius="15" Padding="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>



        <DataGrid Grid.Row="1" 
          Grid.Column="0"
          Grid.ColumnSpan="4"
          x:Name="MovieGrid"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          HeadersVisibility="Column"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="auto"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="auto" />
                <DataGridTextColumn Header="Language" Binding="{Binding Language}" Width="auto" />
                <DataGridTextColumn Header="Img_Url" Binding="{Binding Img_Url}" Width="auto" />
                <DataGridTextColumn Header="About" Binding="{Binding About}" Width="auto" />
            </DataGrid.Columns>

        </DataGrid>


    </Grid>
</Window>
