<Window x:Class="FilmTicketBooking.Selection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmTicketBooking"
        mc:Ignorable="d"
        Title="Selection" Height="450" Width="800"
        MaxWidth="800" MaxHeight="450"
        ResizeMode="NoResize" 
        WindowStartupLocation="Manual"
        Left="200" Top="100">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch" 
                   Grid.RowSpan="2"
                   Grid.ColumnSpan="3">

            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#CC5500" Offset="0" />
                    <GradientStop Color="#88353535" Offset="1" />
                    <GradientStop Color="#00008B" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>

        </Rectangle>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"
                   Margin="0,91,0,68"
                   TextWrapping="Wrap" 
                   Text="Type of Movie Selection" 
                   FontSize="30" 
                   FontWeight="Bold" 
                   Foreground="black"        
                   Width="358" 
                   TextAlignment="Center"/>


        <Button Grid.Row="1"
                Grid.Column="1"
                Content="Upcomming Movies" 
                Click="AddMovieUp"  
                VerticalAlignment="Top" 
                Height="38"
                Background="Orange" 
                FontWeight="Bold" 
                Margin="63,24,63,0" 
                Cursor="Hand"
 >

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Orange" CornerRadius="15" Padding="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>






        <Button Grid.Row="1"
                Content="Released Movie" 
                HorizontalAlignment="Center" 
                Click="AddMovie"
                VerticalAlignment="Top" 
                Width="140" 
                Height="38"
                Background="Orange" 
                FontWeight="Bold" 
                Margin="0,24,0,0" 
                Cursor="Hand"
         >

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Orange" CornerRadius="15" Padding="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>
        
        
        <Button Grid.Row="1"
            Grid.Column="2"
            Content="Back" 
            Click="Back_button"  
            VerticalAlignment="Top" 
            Height="38"
            Background="Orange" 
            FontWeight="Bold" 
            Margin="63,24,63,0" 
            Cursor="Hand"
 >

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="Orange" CornerRadius="15" Padding="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

        </Button>









    </Grid>
</Window>
